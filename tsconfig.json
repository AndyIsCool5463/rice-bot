{
    "compilerOptions": {
        "target": "ES2017",
        "types": ["node", "jest"],
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "modules/*", "index.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
